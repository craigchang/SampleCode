<p id="notice"><%= notice %></p>

<h1>Listing Ads</h1>

<table>
  <thead>
    <tr>
      <th>Magazine</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.magazine %></td>
        <td><%= ad.content %></td>
        <td><%= link_to 'Show', magazine_ad_path(@magazine, ad) %></td>
        <td><%= link_to 'Edit', edit_magazine_ad_path(@magazine, ad) %></td>
        <td><%= link_to 'Destroy', [@magazine, ad], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_magazine_ad_path %>
